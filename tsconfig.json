{
    "include": ["vite.config.js","resources/js/**/*.ts", "resources/js/**/*.tsx", "resources/js/**/*.d.ts"],
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./resources/ts/*"]
        },
        "types": ["vite/client"]
    }
}